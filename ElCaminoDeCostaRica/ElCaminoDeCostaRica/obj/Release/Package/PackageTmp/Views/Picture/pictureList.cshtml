
@model ElCaminoDeCostaRica.Models.Picture
@{ ViewBag.Title = "Fotos"; }
<html>
<head>
</head>

<body class="body_Form">

    <h1 align="center" style="color:black; font-family:Agrozza Demo">Lista de fotos</h1>
    <div class="seccion_1" id="s1">
        <table class="table">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Foto</th>
                <th class="text-center">Descripcion</th>
                <th class="text-center">Sitio</th>
                <th class="text-center">Etapa</th>
            </tr>
            <tbody>
                @foreach (var picture in ViewBag.pictures)
                {
                    <tr>
                        <td class="text-center"> @picture.id </td>
                        <td class="text-center"> @picture.picture </td>
                        <td class="text-center"> @picture.caption </td>
                        <td class="text-center"> @picture.idSite </td>
                        <td class="text-center"> @picture.idStage </td>

                        <td>
                            @Html.ActionLink("Modificar", "", new { },
                                      new { @class = "btn btn alert-info", @onclick = "return confirm('¿Quiere modificar esta foto ? ');" })
                        </td>
                        <td>
                            @Html.ActionLink("Borrar", "pictureDelete", new { identificador = picture.id },
                                  new { @class = "btn btn alert-info", @onclick = "return confirm('¿Quiere borrar esta foto? ');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>