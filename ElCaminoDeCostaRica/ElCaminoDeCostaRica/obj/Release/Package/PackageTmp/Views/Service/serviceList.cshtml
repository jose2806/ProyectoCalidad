@model ElCaminoDeCostaRica.Models.Service
@{ ViewBag.Title = "Servicio"; }
<html>
<head>
</head>

<body class="body_Login">
    <div class="container_Green">
        <h1 align="center" style="color:black; font-family:Agrozza Demo">Lista de servicios</h1>
        <div class="seccion_1" id="s1">
            <table class="table">
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Descripcion</th>
                    <th class="text-center">Categoria</th>
                    <th class="text-center">Proveedor</th>
                    <th class="text-center">Etapa</th>
                </tr>
                <tbody>
                    @foreach (var service in ViewBag.services)
                    {
                        <tr>
                            <td class="text-center"> @service.id </td>
                            <td class="text-center"> @service.name </td>
                            <td class="text-center"> @service.description </td>
                            @{foreach (var category in ViewBag.cat)
                                {
                                    if (category.id == service.idCategory)
                                    {
                                        <td class="text-center"> @category.name </td>
                                        break;
                                    }
                                }

                            }
                            @foreach (var supplier in ViewBag.sup)
                            {
                                if (supplier.id == service.idSupplier)
                                {
                                    <td class="text-center"> @supplier.name </td>
                                    break;
                                }
                            }

                            <td class="text-center"> @service.idStage </td>

                            <td>
                                @Html.ActionLink("Modificar", "serviceEdit", new { identificador = service.id },
                                          new { @class = "btn btn alert-info", @onclick = "return confirm('¿Quiere modificar este servicio ? ');" })
                            </td>
                            <td>
                                @Html.ActionLink("Borrar", "serviceDelete", new { identificador = service.id },
                                      new { @class = "btn btn alert-info", @onclick = "return confirm('¿Quiere borrar este servicio? ');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
