@model ElCaminoDeCostaRica.Models.User
@{ ViewBag.Title = "Usuarios"; }
<html>
<head>
</head>

<body>
    <div class="container_Green">
        <h1 align="center" style="color:black; font-family:Agrozza Demo">Lista de usuarios</h1>
        <div class="seccion_1" id="s1">
            <table class="table">
                <tr>
                    <th class="text-center">Identificación</th>
                    <th class="text-center">Nombre</th>
                    <th class="text-center">Apellido</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Tipo</th>
                    <th class="text-center">Teléfono</th>
                    <th class="text-center">Discapacidad</th>
                </tr>
                <tbody>
                    @foreach (var user in ViewBag.Users)
                    {
                        <tr>
                            <td class="text-center"> @user.id </td>
                            <td class="text-center"> @user.firstName </td>
                            <td class="text-center"> @user.lastName </td>
                            <td class="text-center"> @user.email </td>
                            @{
                                if (user.userType == 0)
                                {
                                    <td class="text-center"> Caminante </td>
                                }
                                else
                                {
                                    <td class="text-center"> Administrador </td>
                                }
                            }
                            <td class="text-center"> @user.phone </td>
                            <td class="text-center"> @user.disability </td>

                            <td>
                                @Html.ActionLink("Modificar", "userEdit", new { identificador = user.id },
                                          new { @class = "btn btn alert-info", @onclick = "return confirm('¿Quiere modificar este usuario ? ');" })
                            </td>
                            <td>
                                @Html.ActionLink("Borrar", "userDelete", new { identificador = user.id },
                                      new { @class = "btn btn alert-info", @onclick = "return confirm('¿Quiere borrar este usuario? ');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
